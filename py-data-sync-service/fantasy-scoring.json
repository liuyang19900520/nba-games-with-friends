{
  "version": "1.0.0",
  "description": "NBA Fantasy Basketball Scoring Rules",
  "rules": {
    "points": {
      "stat": "pts",
      "coefficient": 1.0,
      "description": "Points scored - 1 fantasy point per point"
    },
    "rebounds": {
      "stat": "reb",
      "coefficient": 1.2,
      "description": "Rebounds - 1.2 fantasy points per rebound"
    },
    "assists": {
      "stat": "ast",
      "coefficient": 1.5,
      "description": "Assists - 1.5 fantasy points per assist"
    },
    "steals": {
      "stat": "stl",
      "coefficient": 3.0,
      "description": "Steals - 3 fantasy points per steal"
    },
    "blocks": {
      "stat": "blk",
      "coefficient": 3.0,
      "description": "Blocks - 3 fantasy points per block"
    },
    "turnovers": {
      "stat": "tov",
      "coefficient": -1.0,
      "description": "Turnovers - -1 fantasy point per turnover (penalty)"
    }
  },
  "calculation": {
    "formula": "fantasy_score = (pts × 1.0) + (reb × 1.2) + (ast × 1.5) + (stl × 3.0) + (blk × 3.0) - (tov × 1.0)",
    "rounding": {
      "enabled": true,
      "decimals": 2
    },
    "minimum": 0,
    "description": "Fantasy score is calculated by multiplying each stat by its coefficient and summing all values. Negative values are allowed for turnovers."
  },
  "usage": {
    "example": {
      "stats": {
        "pts": 25,
        "reb": 10,
        "ast": 8,
        "stl": 2,
        "blk": 1,
        "tov": 3
      },
      "calculation": "25 × 1.0 + 10 × 1.2 + 8 × 1.5 + 2 × 3.0 + 1 × 3.0 - 3 × 1.0",
      "result": 55,
      "fantasy_score": 55.0
    }
  },
  "metadata": {
    "last_updated": "2026-01-06",
    "author": "NBA Fantasy Manager",
    "notes": "This configuration can be used across different projects for consistent fantasy scoring calculations."
  }
}